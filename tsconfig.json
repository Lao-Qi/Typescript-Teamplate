{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"allowJs": true,
		"module": "CommonJS",
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true
	},
	"exclude": ["node_modules"],
	"include": ["./src/**/*"]
}
